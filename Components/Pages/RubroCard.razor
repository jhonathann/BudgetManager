@code {
    [Parameter]
    public Rubro? Rubro { get; set; }
    [Parameter]
    public Action? Rerender { get; set; }
    private bool showOptions = false;
    private void OnMouseEnter()
    {
        showOptions = true;
    }
    private void OnMouseLeave()
    {
        showOptions = false;
    }
    private void Edit()
    {
        MainLayout.DisplayInputValueWindow("Edit Rubro", "text", "Nuevo Nombre", (inputParameter) =>
        {
            Rubro.Rename(inputParameter.Value);
            this.StateHasChanged();
        });
    }
    private void Delete()
    {
        MainLayout.DisplayInformationWindow($"Borrar Rubro ({Rubro.Name})", "Estas seguro? (esta acciÃ³n no se puede deshacer)",
        true, () =>
        {
            Rubro.Delete();
            Rerender?.Invoke();
        });
    }
    private void AddMovement()
    {
        MainLayout.DisplayInputValueWindow("Nuevo Movimiento", "number", "Cantidad", async  (inputParameter) =>
        {
            BudgetMonth budgetMonth = await BudgetMonth.GetBudgetMonth(inputParameter.CreationDate.Year, inputParameter.CreationDate.Month);
            Movement movement = new Movement(int.Parse(inputParameter.Value), Rubro.Id, inputParameter.CreationDate);
            budgetMonth.AddMovement(movement);
        },true);
    }
}